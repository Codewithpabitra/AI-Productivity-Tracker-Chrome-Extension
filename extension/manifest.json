{
  "manifest_version": 3,
  "name": "AI Productivity Tracker",
  "version": "1.0",
  "description": "AI-powered productivity tracker",
  "permissions": [
    "tabs",
    "storage",
    "idle"
  ],
  "host_permissions": [
    "http://localhost:5000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}